{
    "name":              "reich/upload",
    "description":       "A great class to upload your file or files to the server",
    "type":              "library",
    "license":           "MIT",
    "homepage":          "https://github.com/edenreich",
    "keywords":          ["upload", "files", "file"],
    "authors": [
        {
            "name":     "Eden Reich",
            "email":    "eden.reich@gmail.com",
            "homepage": "https://github.com/edenreich/"
        }
    ],
    "require" : {
    	"php": ">=5.4.0"
    },
	"require-dev": {
		"phpunit/phpunit": "~5.7"
	},
	"autoload": {
		"psr-4": {
			"Source\\": "src/" 
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
